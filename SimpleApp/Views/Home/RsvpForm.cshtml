@model SimpleApp.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <title>RsvpForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <div class="form-group">
            <p><label> name: @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})</label></p>
             </div>
             <div class="form-group">
            <p><label>Your email: @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })</label></p>
             </div>
             <div class="form-group">
            <p><label>Your phone: @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })</label></p>
             </div>
             <div class="form-group">
            <p>
               <label> Will you attend? @Html.DropDownListFor(x => x.WillAttend, new[] {
                                new SelectListItem() {Text = "Yes I will be there", Value = bool.TrueString },
                                new SelectListItem() {Text = "No I can't come", Value = bool.FalseString }
                            }, "choose an option", new { @class = "form-control" })</label>
            </p>
            </div>
            <div class="text-center">
            <input type="submit" value="Submit RSVP" />
            </div>
        }
    </div>
        </div>
</body>

</html>
